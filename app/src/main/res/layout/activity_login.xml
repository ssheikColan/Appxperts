<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/i_bg"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/i_dotted"
            app:tint="@color/white" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/i_logo" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/normal_size"
            android:scrollbars="none"
            android:theme="@style/Theme.Appxperts.NoActionBar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand_semibold"
                android:gravity="center"
                android:layout_below="@+id/linear"
                android:id="@+id/tvText"
                android:text="ERP PRO"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tvLogintag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mp_size_20"
                android:layout_marginTop="@dimen/mp_size_10"
                android:fontFamily="@font/quicksand_regular"
                android:text="Login"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24"
                android:visibility="gone" />

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/mp_size_80"
                android:layout_height="3dp"
                android:layout_below="@id/tvLogintag"
                android:layout_marginLeft="@dimen/mp_size_12"
                android:layout_marginTop="@dimen/mp_size_8"
                android:background="@drawable/commonbg"
                android:backgroundTint="@color/login_pink"
                android:visibility="gone"></View>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/text_pad"
                android:layout_marginTop="@dimen/mp_size_30"
                android:text="@string/username"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_username"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mp_size_4"
                android:layout_marginTop="@dimen/mp_size_4"
                android:layout_marginRight="@dimen/mp_size_4"
                android:hint="Username"

                app:hintTextColor="@color/textLite">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_pad"
                    android:fontFamily="@font/quicksand_semibold"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/text_size_16" />

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:id="@+id/rlPassword"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPwd"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/text_pad"
                    android:layout_marginTop="@dimen/normal_size"
                    android:text="@string/passwrd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"
                    android:visibility="gone" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_paswrd"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPwd"
                    android:layout_marginLeft="@dimen/mp_size_4"
                    android:layout_marginTop="@dimen/mp_size_20"
                    android:layout_marginRight="@dimen/mp_size_4"
                    android:hint="@string/passwrd"
                    app:hintTextColor="@color/textLite"
                    app:passwordToggleEnabled="true">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/passwrd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_pad"
                        android:fontFamily="@font/quicksand_semibold"
                        android:inputType="textPassword"

                        android:textSize="@dimen/text_size_16" />


                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/ivToggleVisible"
                    android:layout_width="@dimen/mp_size_24"
                    android:layout_height="@dimen/mp_size_24"
                    android:layout_below="@id/tvPwd"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/mp_size_8"
                    android:layout_marginTop="@dimen/mp_size_16"
                    android:layout_marginRight="@dimen/mp_size_8"
                    android:layout_marginBottom="@dimen/mp_size_8"
                    android:src="@drawable/ic_visibleoff"
                    android:visibility="gone" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/mp_size_6"
                android:layout_marginTop="@dimen/mp_size_20"
                android:layout_marginRight="@dimen/mp_size_4"
                android:text="@string/compny_name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/cmpnyName"

                android:layout_marginLeft="@dimen/mp_size_4"
                android:layout_marginRight="@dimen/mp_size_4"
                style="@style/spinner_style"
                android:spinnerMode="dialog"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/text_pad"
                android:layout_marginTop="@dimen/normal_size"
                android:text="@string/branch"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/branchName"
                style="@style/spinner_style"
                android:layout_marginLeft="@dimen/text_pad"
                android:spinnerMode="dialog"
                android:visibility="visible" />


            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/simpleCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_size"
                android:layout_marginTop="@dimen/text_size"
                android:layout_marginBottom="@dimen/text_size"
                android:checked="false"
                android:text="@string/remember_me"
                android:textSize="@dimen/text_size_18"
                app:buttonTint="@color/colorPrimary" />


            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"


                android:background="@drawable/login_button"
                android:gravity="center"
                android:padding="@dimen/mp_size_10"
                android:text="Sign In"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <!--<RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rlBottom"
            android:background="@color/white"
            android:layout_height="wrap_content">-->
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ivBottom"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mp_size_10"
            android:layout_marginBottom="@dimen/mp_size_40"
            android:gravity="center"
            android:padding="@dimen/mp_size_10"
            android:visibility="gone"
            android:text="FORGOT PASSWORD ?"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/ivBottom"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/i_dotted"
            />

        <!--   </RelativeLayout>-->

    </RelativeLayout>


</ScrollView>